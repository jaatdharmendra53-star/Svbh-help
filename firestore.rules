
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: Check if user document claims they are an Admin
    function isAdmin(uid) {
      return exists(/databases/$(database)/documents/users/$(uid)) && 
             get(/databases/$(database)/documents/users/$(uid)).data.role == 'Admin';
    }

    // User Profiles
    match /users/{userId} {
      allow read: if true; 
      allow write: if true; // Simplified for custom verification system
    }

    // Student Directory (Used for verification during login)
    match /student_directory/{docId} {
      allow read: if true; // Publicly readable for the login query
      allow write: if false; 
    }

    // Complaints
    match /complaints/{complaintId} {
      allow read: if true; // Open reading for student-led feed
      allow create: if true;
      allow update: if true;
      allow delete: if false;
    }
  }
}
